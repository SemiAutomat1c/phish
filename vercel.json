{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "buildCommand": "sh build.sh",
        "includeFiles": ["prisma/**", "templates/**", "static/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "PYTHONPATH": "$PYTHONPATH:.",
    "DATABASE_URL": "${DATABASE_URL}",
    "SECRET_KEY": "${SECRET_KEY}",
    "ADMIN_USERNAME": "${ADMIN_USERNAME}",
    "ADMIN_PASSWORD": "${ADMIN_PASSWORD}"
  }
}